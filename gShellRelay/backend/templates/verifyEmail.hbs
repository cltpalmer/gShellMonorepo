<!-- verifyemail.hbs -->
<table role="presentation" width="100%" cellpadding="0" cellspacing="0" style="background:#f7f7f7;padding:40px 0;">
  <tr>
    <td align="center">
      <!-- email “card” -->
      <table role="presentation" cellpadding="0" cellspacing="0" width="500" style="max-width:500px;background:#ffffff;border-radius:8px;padding:30px;box-shadow:0 0 15px rgba(0,0,0,0.1);font-family:Arial,Helvetica,sans-serif;color:#333333;">
        <tr>
          <td style="text-align:left;">
            <h2 style="margin:0 0 20px 0;color:#2c3e50;font-size:24px;font-weight:700;">Welcome, {{username}} 👋</h2>

            <p style="margin:0 0 16px 0;line-height:1.6;">
              Thanks for signing up for <strong>Creative&nbsp;League</strong>! You’re almost there.
            </p>

            <p style="margin:0 0 24px 0;line-height:1.6;">
              Click the button below to verify your email address:
            </p>

            <a href="{{verificationLink}}"
               style="display:inline-block;padding:12px 24px;background:#007bff;color:#ffffff;text-decoration:none;border-radius:5px;font-size:16px;font-weight:600;">
              ✅ Verify My Email
            </a>

            <p style="margin:32px 0 0 0;font-size:14px;line-height:1.4;color:#666;">
              If you didn’t create this account, you can safely ignore this email.
            </p>

            <p style="margin:40px 0 0 0;font-size:12px;color:#aaaaaa;text-align:center;">
              Creative League • All&nbsp;Rights&nbsp;Reserved
            </p>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
